<mujoco model="robot">
    <compiler angle="radian" />
    <default>
        <geom density="1000" />
        <joint damping="0.02" armature="0.05" frictionloss="0.01" />
        <default class="wheel">
            <geom type="cylinder" size="0.035 0.015" rgba="0.2 0.2 0.2 1" 
                  contype="1" conaffinity="1" friction="1.0 0.1 0.1" />
        </default>
        <default class="caster_wheel">
            <geom type="sphere" size="0.015" rgba="0.3 0.3 0.3 1"
                  contype="1" conaffinity="1" friction="0.8 0.1 0.1" />
        </default>
    </default>
    
    <worldbody>
        <body name="body" pos="0 0 0.05">
            <site name="ImuSensor" pos="0 0 0" euler="0 0 0" />
            <!-- Main circular body -->
            <geom name="main_body" type="cylinder" size="0.15 0.03" pos="0 0 0" 
                  rgba="0.8 0.8 0.8 1" mass="1.0" />
            
            <!-- Left drive wheel -->
            <body name="left_wheel" pos="0 0.12 -0.02">
                <joint name="left_wheel_joint" type="hinge" axis="0 1 0" />
                <geom class="wheel" quat="0.7071 0.7071 0 0"/>
            </body>
            
            <!-- Right drive wheel -->
            <body name="right_wheel" pos="0 -0.12 -0.02">
                <joint name="right_wheel_joint" type="hinge" axis="0 1 0" />
                <geom class="wheel" quat="0.7071 0.7071 0 0" />
            </body>
            
            <!-- Front caster wheel -->
            <body name="caster_wheel" pos="0.12 0 -0.035">
                <joint name="caster_ball_joint" type="ball" />
                <geom class="caster_wheel" mass="1" />
            </body>
        </body>
    </worldbody>
    
    <contact>
        <!-- Exclude internal collisions -->
        <exclude body1="body" body2="left_wheel" />
        <exclude body1="body" body2="right_wheel" />
        <exclude body1="body" body2="caster_wheel" />
    </contact>
    
    <actuator>
        <!-- Differential drive actuators -->
        <velocity name="left_wheel" joint="left_wheel_joint"
            ctrllimited="true" ctrlrange="-20 20"
            forcelimited="true" forcerange="-3.0 3.0"
            kv="1"/>
        <velocity name="right_wheel" joint="right_wheel_joint"
            ctrllimited="true" ctrlrange="-20 20"
            forcelimited="true" forcerange="-3.0 3.0"
            kv="1"/>
    </actuator>
    
    <sensor>
        <framequat name="ImuSensor_Framequat" objtype="site" objname="ImuSensor" />
        <velocimeter name="ImuSensor_Velocimeter" site="ImuSensor" />
        <gyro name="ImuSensor_Gyro" site="ImuSensor" />
        <accelerometer name="ImuSensor_Accelerometer" site="ImuSensor" />
    </sensor>
</mujoco>